@model IEnumerable<CustomerFeedback.Models.Customer>

@{
    ViewData["Title"] = "Customers";
    string tableNav = "Actions";
}

<h1>Customers</h1>

<a asp-action="Create" class="btn btn-success my-2">Create New</a>
<table class="table table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayName(tableNav)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
              <div class="row justify-content-between">
                <div class="col text-nowrap">
                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                    <i class="fas fa-pencil-alt text-light"></i>
                  </a> |
                  <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                    <i class="fas fa-list-ul text-light"></i>
                  </a> |
                  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                    <i class="fas fa-trash-alt text-light"></i>
                  </a> 
                </div>
              </div>
            </td>
        </tr>
}
    </tbody>
</table>
